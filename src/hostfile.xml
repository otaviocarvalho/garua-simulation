<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4">

    <AS id="wifi-as-0" routing="Full">
        <cluster id="edge-cluster-0" prefix="edge-node-" suffix=""
                radical="0-3" speed="0.3Gf" bw="2Mbps" lat="1280ms"
        router_id="router-edge"/>

        <AS id="cloud-as-0" routing="None">
            <host id="cloud-0" speed="1.0Gf" />
        </AS>

        <link id="dsl-0" bandwidth="4Mbps" latency="525ms"/>

        <ASroute src="edge-cluster-0" dst="cloud-as-0"
            gw_src="router-edge"
            gw_dst="cloud-0">
            <link_ctn id="dsl-0"/>
        </ASroute>

    </AS>

</platform>
